package gg.single;

import gg.single.LinkedListLength.Node;

public class linkedlistSwapAndReversal {
	static class Node{
		int data;
 		Node next;
 		Node(int d){
 			data=d;
 			next=null;
 		}
	}
	public static void main(String args[]){
		Node head=new Node(1);
		head=insertEnd(head,2);
		head=insertEnd(head,3);
		head=insertEnd(head,4);
		head=insertEnd(head,5);

		head=swapTwoNodes(head,2,4);
		Node head2=reverseLinkedList(head);
		
		printAllNodes(head2);
		printAllNodes(head);
	}
	public static Node  insertEnd(Node head,int value){
		if(head==null)
			return new Node(value);
		Node temp=head;
		Node prev=null;
		while(temp!=null){
			prev=temp;
			temp=temp.next;
		}
		prev.next=new Node(value);
		return head;
	}

	//Printing all the nodes given the head of the list 
	public static void printAllNodes(Node head){	
		if(head==null)
			return ;
		Node tr=head;
			while(tr!=null){
				System.out.println("Data "+ tr.data);
				tr=tr.next;
			}
	}


}
