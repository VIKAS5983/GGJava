package gg.doubly;

public class doubleLinkedListInsertion {
	public static void main(String args[]){
		Node n=new Node(2);
		
		n=insertHead(n,3);
		n=insertHead(n,4);
		n=insertHead(n,5);
		n=insertHead(n,6);
		n=insertHead(n,7);
		n=insertHead(n,8);

		printDoubleLinkedList(n);
	}
	public static void printDoubleLinkedList(Node head){
		while(head!=null){
		System.out.print(" "+head.data);
		head=head.next;
		}
		System.out.println();
	}
	
	public static Node insertHead(Node head,int data){
		Node n=new Node(data);	
		if(head==null){
			return n;
		}
		
		n.next=head;
		head.prev=n;
		n.prev=null;
		return n;
	}
	
	public static Node insertTail(Node head,int data){
		Node n=new Node(data);	
		if(head==null){
			return n;
		}
		Node temp=head;
		while(temp.next!=null){
			temp=temp.next;
		}
		n.prev=temp;
		temp.next=n;
		n.next=null;
		
		return head;
	}
	public static Node insertAtIndex(Node head,int data, int index){
		if(head==null || index==0){
			return insertHead(head,data);
		}
		
		int count =1;
		Node temp=head;
		while(temp.next!=null || count !=index){
			
		}
		Node n=new Node(data);
		n.next=temp.next;
		temp.next.prev=n;
		temp.next=n;
		n.prev=temp;
		
		
		return head;
	}
	
	public static Node insertAfterNode(){
		return null;
	}
	
	public static Node insertBeforeNode(){
		
		return null;
	}
}
