package gg.sort;

public class HeapSort {
	public static void main(String args[]){
		
		int arr[]={12,11,21,23};
		heapSort(arr);

		ArrayUtils.printArray(arr);
	}
	public static void heapSort(int arr[]){
		
		for(int i=0;i<arr.length;i++){
			heapify(arr, i, arr.length-i);
		}
	}
	
	public static void heapify(int arr[], int currN, int length){
		if(currN>=arr.length){
			return;
		}

		
		int leftChild=2*currN+1;
		int rightChild=2*currN+2;
		int maxNum,maxIndex;
		
		if(leftChild < arr.length && rightChild < arr.length){
		 maxNum=arr[leftChild]>arr[rightChild]? arr[leftChild]:arr[rightChild];
		 maxIndex=arr[leftChild]>arr[rightChild]?leftChild:rightChild;
		}else if(leftChild < arr.length ){
			 maxNum=arr[leftChild];
			 maxIndex=leftChild;
		}else{
			return;
		}
		
		if(arr[currN]<maxNum){
			int tem=arr[currN];
			arr[currN]=arr[maxIndex];
			arr[maxIndex]=tem;
		}
		
		System.out.println(maxIndex);
		
		
		return;
	}
}
