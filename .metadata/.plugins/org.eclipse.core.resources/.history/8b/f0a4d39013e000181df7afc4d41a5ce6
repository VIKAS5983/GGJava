package gg.sort;

public class MergeSort {

	public static void main(String args[]){
		
		int arr[]={1,4,5,6,7,2,3,12,11,21,23};
		mergeSort(arr, 0, arr.length-1);
		System.out.println(arr);
	}
	
	public static void mergeSort(int[] arr,int l, int h){
		if(l>=h)
			return;
		
		int mid=(h-1)+l;
		
		mergeSort(arr, l, mid);
		mergeSort(arr,mid+1,h);
		
		mergeTwoSubArrays(arr,l,mid,h);
		return ;
	}
	private static void mergeTwoSubArrays(int[] arr,int l, int m , int h) {

		if(l==h){
			return ;
		}
		
		int sub1[]=new int[m-l+1];
		int sub2[]=new int[h-m+1];
		
		int count=0;
		
		while(count<=m-l){
			sub1[count]=arr[1+count-1];
			count++;
		}
		count=0;
		while(count<=h-m){
		//	System.out.println("h: "+h+" m: "+m+" l: "+l+" count: "+count +" l+m+count: "+ (l+m+count));
			sub2[count]=arr[l+m+count];
			count++;
		}
		
		System.out.println(" sub1 " ); 
		
		for(int i=0;i<sub1.length;i++){
			System.out.print(" "+ sub1[i]);
		}
		
		
		int s1Size=sub1.length;
		int s2Size=sub2.length;
		
		count=0;
		int i1 = 0,i2=0;
		while( i1 <s1Size && i2<s2Size){
		int temp=0;
		
		if(sub1[i1]>sub2[i2]){
			temp=sub2[i2];
			i2++;
			System.out.println(" i2: "+ i2+ " tepm: "+ temp);
		}else{
			temp=sub1[i1];
			System.out.println(" i1: "+ i1+" temp "+ temp);
			i1++;
		}
		
		arr[h-l+count]=temp;
		count++;		
		}
		
		while(i1<s1Size){
			arr[h-l+count]=sub1[i1];
			i1++;
			count++;
		}
		
		while(i2<s2Size){
			arr[h-l+count]=sub2[i2];
			i2++;
			count++;
		}
		
		
		return;
	}
	
	
	
	
	
}
