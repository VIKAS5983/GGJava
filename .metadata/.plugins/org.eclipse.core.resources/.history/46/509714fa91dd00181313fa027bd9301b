	public static Node reverseLinkedListInGroups(Node head, int size){
		
		if(head==null || size==1)
			return head;
		
		Node temp=head;
		Node prevTemp=null;
		Node newHead=null;
		Node prevTail=null;
		Node curHead=head;
		int count=1;
		
		while(temp.next!=null){
			count++;
			if(count==size){
				newHead=temp;
			}
			
			if(count%size==0){
				if(prevTail!=null)
					prevTail.next=temp;
				prevTail=curHead;
				curHead=temp.next;
			}
			
			  prevTemp=temp;
			  temp=temp.next;
				
		}
		
		return newHead;
	}
	
	
	

}
