	public static Node reverseLinkedListInGroups(Node head, int size){
		if(head==null)
			return null;
		int count=0;
		Node nhead=head;
		Node prev=null;
		Node temp=head;
		while(temp!=null && count!=size){
			Node temp1=temp.next;
			temp.next=prev;
			prev=temp;
			temp=temp1;
			count++;
		}

		nhead.next=reverseLinkedListInGroups(temp, size);
		
		return prev;
	}
	
	
	public boolean isLoopLinkedList(Node head){
		
		Node temp=head;
		Node temp1=head;
		while(temp!=null && temp1!=null && temp1.next!=null){
			if(temp==temp1)
				return true;
			
			temp=temp.next;
			temp1=temp1.next.next;
		}
		
		return false;
	}
	
	
	

}
